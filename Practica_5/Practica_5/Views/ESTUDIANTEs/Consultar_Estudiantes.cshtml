@model IEnumerable<Practica_5.Models.ESTUDIANTE>

<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <style>
        .tabla {
            background-color: white;
            color: black;
            font-family: 'Roboto', sans-serif;
        }
        .td{
            font-family: 'Roboto', sans-serif;
        }
        h2.{
            font-family: 'Roboto', sans-serif;
        }
    </style>
</head>
<body>
    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <center>
        <h2 class="text-center">Lista de Estudiantes</h2>
    </center>
    <div class="table-responsive">
        <table class="table table-sm tabla-dark ">
            <thead class="tabla">
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.nombre)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.apellido)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.edad)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.sexo)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.carrera)
                    </th>
                    <th class="tabla">

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="tabla">
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.apellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.edad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sexo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.carrera)
                        </td>
                        <td>
                            @Html.ActionLink("Verificar Materias", "Mostrar_Materias", new { id_estudiante = item.ID_estudiante }, htmlAttributes: new { @class = "btn btn-success" })
                            @*@Html.ActionLink("Edit", "Edit", new { id=item.ID_estudiante }) |
                                @Html.ActionLink("Details", "Details", new { id=item.ID_estudiante }) |
                                @Html.ActionLink("Delete", "Delete", new { id=item.ID_estudiante })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
