@model IEnumerable<Practica_5.Models.ESTUDIANTES_MATERIAS>

<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <style>
        .tabla {
            background-color: white;
            color: black;
            font-family: 'Roboto', sans-serif;
        }

        .td {
            font-family: 'Roboto', sans-serif;
        }

        .h3{
            font-family: 'Roboto', sans-serif;
        }
        .p{
            font-family: 'Roboto', sans-serif;
            font-size: 25px;
        }
    </style>
</head>
<body>
    <center>
        <h3>Lista de Materias Seleccionadas</h3>
    </center>
    <h4>
        @foreach (var bnombre in Model)
        {
            @Html.DisplayFor(model => bnombre.ESTUDIANTE.nombre) <label> </label>
