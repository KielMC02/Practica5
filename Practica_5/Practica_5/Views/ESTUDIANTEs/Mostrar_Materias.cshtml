            var contar = 1;
            if(contar == 1)
            {
                break;
            }
        }
    </h4>
    <div class="table-responsive">
        <table class="table table-sm">
            <thead class="tabla">
                <tr>
                    @*<th>
                        @Html.DisplayNameFor(model => model.ESTUDIANTE.nombre)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.MATERIA.nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MATERIA.descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MATERIA.horario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MATERIA.creditos)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MATERIA.profesor)
                    </th>
                </tr>
            </thead>
            <tbody>
              @foreach (var item in Model)
               {
                    <tr>
                        @*<td>
                             @Html.DisplayFor(modelItem => item.ESTUDIANTE.nombre)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.MATERIA.nombre)
                        </td>
