                            @Html.DisplayFor(modelItem => item.MATERIA.horario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MATERIA.creditos)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MATERIA.profesor)
                        </td>
                        @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID_estudiante_materia }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID_estudiante_materia }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID_estudiante_materia })
                        </td>*@
