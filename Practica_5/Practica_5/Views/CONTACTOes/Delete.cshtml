@model Practica_5.Models.CONTACTO

@{
    ViewBag.Title = "Delete";
}


<br />
<h3>CONFIRME ANTES DE BORRAR</h3>
<strong>"NO HAY RECUPERACION DE DATOS"</strong>
<br />
<br />
<br />
<br />
<div class="panel-danger">
    <div class="panel-heading"> CONTACTO A ELIMINAR</div>
    <div class="panel-body">

        <dl class="dl-horizontal">
            <dt>
                <label>Nombre Completo</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.nombre)
            </dd>

            <dt>
                <label>Telefono</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.celular)
            </dd>

            <dt>
                <label>Correo Electronico</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.email)
            </dd>

            <dt>
                Direccion
            </dt>

            <dd>
                @Html.DisplayFor(model => model.direccion)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="container">

                <div class="row col-xs-8">
                    <input type="submit" value="BORRAR CONTACTO" class="btn btn-danger btn-xs" />
                </div>
            </div>
        }
        <div class="container">

            <div class="row col-xs-8">
                <br />
                <button class="btn btn-info" onclick="location.href=('@Url.Action("Index","CONTACTOes")')">VOLVER ATRAS</button>
            </div>
        </div>

    </div>

</div>